<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".ContactSelectorActivity">

    <LinearLayout
        android:layoutDirection="rtl"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_height="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שיחות נכנסות אחרונות"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <ListView
            android:id="@+id/incoming_numbers_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#d5d5e9"
            android:layout_weight="9.2"/>

    </LinearLayout>


    <LinearLayout
        android:layoutDirection="rtl"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_height="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שיחות יוצאות אחרונות"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <ListView
            android:id="@+id/outgoing_numbers_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#d5d5e9"
            android:layout_weight="9.2"/>
    </LinearLayout>


    <LinearLayout
        android:layoutDirection="rtl"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_height="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שיחות אחרונות שלא נענו"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <ListView
            android:id="@+id/missed_numbers_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#d5d5e9"
            android:layout_weight="9.2"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_get_contact"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shadow_button"
        android:drawableLeft = "@drawable/contact_small"
        android:textSize="25dp"
        android:text="אנשי הקשר שלי"/>

</LinearLayout>